{% extends 'base.html.twig' %}
{% block title %}
    {{ book.title }}
{% endblock %}

{% block body %}
    {{ dump(book) }}
    <h1>{{ book.title }}</h1>
    <img src="{{ asset('uploads/hpelcdf.jpg') }}" alt="{{ book.title }}">
    <h2>Auteur</h2>
    {{ book.author.fullname }}
    <h2>Catégories</h2>
    <ul>
    {% for category in book.category %}
        <li><a href="{{ path('category_show', {'id': category.id}) }}">{{ category.name }}</a></li>
    {% endfor %}
    </ul>

    <h2>Liste des livres du même auteur</h2>
    <ul>
        {% for otherbook in otherbooks %}
            <li>
                <a href="{{ path('book_show', {'slug' : otherbook.slug}) }}">{{ otherbook.title }}</a>
            </li>
            {% else %}
            <li>Aucun autre livre</li>
        {% endfor %}
    </ul>
{% endblock %}
